<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/timeline_item1"
        android:layout_width="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:layout_height="120dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/jose_picture"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="32dp" />

            <TextView
                android:id="@+id/user_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Glenn Dayton"
                android:textSize="24sp"
                android:fontFamily="sans-serif-light"
                android:gravity="left"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/status_time1"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/status_time1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 hours ago"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:gravity="left"
                android:layout_below="@+id/user_name1"
                android:layout_toEndOf="@+id/profile_image1"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/email_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Had fun at the Donald Trump rally."
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal|left"
                android:layout_below="@+id/profile_image1"
                android:layout_alignStart="@+id/profile_image1"
                android:paddingTop="10dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/timeline_item2"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_below="@+id/timeline_item1"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/jose_picture"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="32dp" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jose Calles"
                android:textSize="24sp"
                android:fontFamily="sans-serif-light"
                android:gravity="left"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/status_time"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/status_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6 hours ago"
                android:textSize="18sp"
                android:fontFamily="sans-serif-medium"
                android:gravity="left"
                android:layout_below="@+id/user_name"
                android:layout_toEndOf="@+id/profile_image"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/status_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Oh em gee last night was so amazing!"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal|left"
                android:layout_below="@+id/profile_image"
                android:layout_alignStart="@+id/profile_image"
                android:paddingTop="10dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>