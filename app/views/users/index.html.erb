<div class="row">
	<div class="large-12 column">
		<h1>Listing Users</h1>
		
		<table>
		  <thead>
		    <tr>
			  <th>Pic</th>
		      <th>First name</th>
		      <th>Last name</th>
		      <th>Job Role</th>
		      <th>Email</th>
		      <th>Manager</th>
		      <th>Role</th>
		      <th colspan="3"></th>
		    </tr>
		  </thead>
		
		  <tbody>
		    <% @users.each do |user| %>
		      <tr>
			    <td>
				    <%= image_tag(user.image.url(:small), :style => "width:20px;") %>
				</td>
		        <td><%= link_to user.first_name, user_path(user.id) %></td>
		        <td><%= user.last_name %></td>
		        <td><%= user.role %></td>
		        <td><%= user.email %></td>
		        <td>
			        <% if !user.manager.nil? %>
			        	<%= user.manager.first_name %> <%= user.manager.last_name %>
			        <% else %>
			        	No Manager
			        <% end %>
			    </td>
			    <td>
				    <% if user.role == "superadmin" %>
				    	<span class="radius alert label">SUPERADMIN</span>
				    <% end %>
				    <% if user.role == "admin" %>
				    	<span class="radius success label">ADMIN</span>
				    <% end %>
				    <% if user.role == "employee" %>
				    	<span class="radius secondary label">EMPLOYEE</span>
				    <% end %>
				</td>
		        <td>
			        <%= link_to user do %>
			        	<i class="fi-page"></i>
			        <% end %>
		        </td>
		        <td>
			        <%= link_to edit_user_path(user) do %>
			        	<i class="fi-clipboard-pencil"></i>
			        <% end %>
		        </td>
		        <td>
			        <%= link_to user, method: :delete, data: { confirm: 'Are you sure?' } do %>
			        	<i class="fi-trash"></i>
			        <% end %>
		        </td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
		
		<br>
		
		<b>Import Products</b>
		<%= form_tag import_users_path, multipart:true do %>
			<br /><%= file_field_tag :file %>
			<%= hidden_field_tag :company_id, current_user.company.id %>
			<%= submit_tag "Import Users", class: "button radius small" %>
		<% end %>
		
		<%= link_to 'New User', new_user_path %>
	</div>
</div>
