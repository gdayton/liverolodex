<div class="row">
	<div class="large-3 column">
		<%= render 'companies/settingsbar' %>
	</div>
	<div class="large-9 column">
		<br />
		<h3>Manage Departments</h3>
		<br />
		<%= link_to "New Department" ,new_company_department_path(@company), :class => "button radius tiny" %>
		<table width="100%" border="0">
		  <tbody>
		    <% @departments.each do |department| %>
		      <tr>
		        <td><%= department.title %></td>
		        <td width="65px;">
			        <%= link_to edit_company_department_path(@company, department), :class => "button radius tiny secondary", :style => "margin-bottom:0;" do %>
			        	<i class="fi-clipboard-pencil"></i>
			        <% end %>
		        </td>
		        <td width="65px;">
			        <%= link_to company_department_path(@company, department), :class => "button radius tiny secondary", :style => "margin-bottom:0;", method: :delete, data: { confirm: 'Are you sure?' } do %>
			        	<i class="fi-trash"></i>
			        <% end %>
		        </td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>
</div>
