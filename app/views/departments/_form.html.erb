<%= form_for([@company, @department]) do |f| %>
<div class="row">
	<div class="large-12 column">
	  <% if @department.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@department.errors.count, "error") %> prohibited this department from being saved:</h2>
	
	      <ul>
	      <% @department.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	      </ul>
	    </div>
	  <% end %>
	</div>
</div>
<div class="row">
	<div class="large-6 column">
	  <div class="field">
	    <%= f.text_field :title, :placeholder => "Department Title" %>
	  </div>
	</div>
</div>
<div class="row">
	<div class="large-12 column">
	  <div class="actions">
	    <%= f.submit "Save", :class => "button radius tiny" %><%= link_to "Cancel", company_departments_path(@company), :style => "padding-left:10px;" %>
	  </div>
	</div>
</div>
<% end %>
