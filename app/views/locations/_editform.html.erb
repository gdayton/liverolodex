<% @locations.each do |location| %>
	<div class="location">
		<div class="location-action">
			<%= button_tag(type: 'submit', class: 'tiny alert button') do %>
				<i class="fi-x"></i>
			<% end %>
		</div>
		<div class="location-title">
			<%= location.title %>
		</div>
	</div>
<% end %>
<div class="row">
<%= form_for(@location, url: '') do |f| %>
	<div class="large-9 columns">
		<%= f.text_field :title, placeholder: "Add a new location..." %>
	</div>
	<div class="large-3 columns">
		<%= button_tag(type: 'submit', class: 'tiny success button action-right') do %>
			Add Location
		<% end %>
	</div>
<% end %>
</div>